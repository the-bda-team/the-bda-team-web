{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://the-bda.team/_schemas/data.json",
  "type": "array",
  "items": {
    "$ref": "#/$defs/Data"
  },
  "$defs": {
    "Data": {
      "type": "object",
      "required": ["id", "description", "name", "people", "url", "year"],
      "properties": {
        "id": { "type": "string" },
        "description": { "type": "string" },
        "events": { "type": "array", "items": { "type": "string" }, "minItems": 1 },
        "keywords": { "type": "array", "items": { "type": "string" } },
        "month": { "$ref": "_schemas/base.json#/$defs/Month" },
        "name": { "type": "string" },
        "people": { "type": "array", "items": { "type": "string" }, "minItems": 1 },
        "publications": { "type": "array", "items": { "type": "string" }, "minItems": 1 },
        "url": { "type": "string", "format": "uri" },
        "year": { "$ref": "_schemas/base.json#/$defs/Year" }
      },
      "additionalProperties": false
    }
  }
}

