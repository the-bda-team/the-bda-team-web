{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://the-bda.team/_schemas/people.json",
  "type": "array",
  "items": {
    "$ref": "#/$defs/Person"
  },
  "$defs": {
    "Person": {
      "type": "object",
      "required": ["id", "category", "email", "name"],
      "properties": {
        "id": { "type": "string" },
        "category": { "type": "string", "enum": ["Teamlead", "Former Staff", "Staff"] },
        "affiliation": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "name": { "$ref": "_schemas/base.json#/$defs/PersonName" },
        "orcid": { "type": "string", "pattern": "^[0-9X]{4}-[0-9X]{4}-[0-9X]{4}-[0-9X]{4}$" },
        "title": { "type": "string", "enum": ["Dr.", "Prof."] },
        "topics": { "type": "array", "items": { "type": "string" }, "minItems": 1 },
        "url": { "type": "string", "format": "uri" },
        "years": { "type": "string", "pattern": "^[1-9][0-9]{3} - ([1-9][0-9]{3}|today)$" }
      },
      "additionalProperties": false
    }
  }
}
